         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="closeButton" layoutX="114.0" layoutY="432.0" mnemonicParsing="false" onAction="#closeButtonOnAction" prefHeight="25.0" prefWidth="273.0" style="-fx-background-color: #00b140;" text="Close" textFill="WHITE">
