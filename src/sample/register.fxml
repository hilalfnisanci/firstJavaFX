                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <ImageView fx:id="shieldImageView" fitHeight="73.0" fitWidth="59.0" layoutX="34.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/shield.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <Label layoutX="114.0" layoutY="121.0" prefHeight="17.0" prefWidth="69.0" text="Firstname" />
      <TextField fx:id="firstnameTextField" layoutX="114.0" layoutY="138.0" prefHeight="17.0" prefWidth="273.0" promptText="Firstname" />
      <Label layoutX="114.0" layoutY="174.0" prefHeight="17.0" prefWidth="69.0" text="Lastname" />
      <TextField fx:id="lastnameTextField" layoutX="114.0" layoutY="191.0" prefHeight="25.0" prefWidth="273.0" promptText="Lastname" />
